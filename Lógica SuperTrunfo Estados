        do {
            printf("\nEscolha um atributo (1-PopulaÃ§Ã£o, 2-PIB, 3-Ãrea): ");
            scanf("%d", &atributo);
        } while (atributo < 1 || atributo > 3);

        float valJogador = obterAtributo(estadoJogador, atributo);
        float valMaquina = obterAtributo(estadoMaquina, atributo);

        printf("\nEstado da MÃ¡quina:\n");
        mostrarEstado(estadoMaquina);

        comparar(valJogador, valMaquina, &jogador, &maquina);
    }

    printf("ğŸ FIM DE JOGO\n");
    printf("VocÃª: %d ponto(s)\n", jogador.pontos);
    printf("MÃ¡quina: %d ponto(s)\n", maquina.pontos);

    if (jogador.pontos > maquina.pontos)
        printf("ğŸ‰ ParabÃ©ns! VocÃª venceu o jogo!\n");
    else if (jogador.pontos < maquina.pontos)
        printf("ğŸ˜¢ VocÃª perdeu o jogo.\n");
    else
        printf("ğŸ¤ Empate!\n");

    return 0;
}
